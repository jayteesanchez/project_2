<div class="jumbotron sIndex">
 <h1><u class='change'>Edit your Shoe</h1>
</div>
  <%= bootstrap_form_for [:user, @shoe] do |f| %>
  <%= f.text_field :name %> <br>
  <%= f.number_field :size %> <br>
   <%= f.select :condition, [['DS','ds'],['PADS','pads'],['VNDS','vnds'],['Good','good'], ['Beaters', 'beaters']] %>
  <%= f.text_field :asking_price %> <br>
  <%= f.text_field :image %> <br>
  <%= f.submit %>
<% end %>

