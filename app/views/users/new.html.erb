<div class="jumbotron uShow signUp">
<h1>Sign Up</h1>
<!-- Installed BootStrap Form_For Gem and it's amazing -->
<%= bootstrap_form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.text_field :name %>
  <%= f.email_field :email %>
  <%= f.text_field :address_line_1 %>
  <%= f.text_field :address_line_2 %>
  <%= f.text_field :city %>
  <%= f.text_field :zip_code %>
  <%= f.text_field :state %>
  <%= f.password_field :password %>
  <%= f.password_field :password_confirmation %>
  <%= f.text_field :image %>
  <div class="actions"><%= f.submit class:"btn btn-success"%></div>
<% end %>
</div>

<div class="panel-footer bottom">
  <a href="https://github.com/jayteesanchez/project_2"><p class="text-warning">&copy; Jaytee Sanchez</p></a>
</div>
